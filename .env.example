# Creator Newsdesk Environment Configuration
# 
# Copy this file to .env and fill in your actual values
# IMPORTANT: .env should NEVER be committed to GitHub!
# The .env file is already in .gitignore

# =============================================================================
# WordPress Configuration
# =============================================================================
WP_API_BASE=https://www.creatornewsdesk.com/wp-json
WP_USER=your_username
WP_APP_PASSWORD=your_app_password

# =============================================================================
# Brave Search API
# =============================================================================
# Get your API key from https://brave.com/search/api/
# Free tier: 2000 searches/month
BRAVE_API_KEY=your_brave_api_key

# =============================================================================
# Local LLM (llama.cpp)
# =============================================================================
# URL of your local LLM server (default: OpenAI-compatible proxy)
LOCAL_LLM_BASE_URL=http://172.17.0.1:1240
LOCAL_LLM_MODEL=Mistral-7B-Instruct-v0.3-Q4_K_M.gguf

# =============================================================================
# External AI Providers (optional)
# =============================================================================
# xAI (Grok)
XAI_API_KEY=your_xai_api_key

# OpenAI
OPENAI_API_KEY=your_openai_api_key

# MiniMax
MINIMAX_API_KEY=your_minimax_api_key

# =============================================================================
# Dashboard Configuration
# =============================================================================
DASHBOARD_URL=http://localhost:8888

# =============================================================================
# Pipeline Configuration
# =============================================================================
PUBLISH_MODE=draft  # Options: 'draft' or 'publish'
BACKFILL_WINDOW_DAYS=10
